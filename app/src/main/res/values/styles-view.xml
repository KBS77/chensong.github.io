<?xml version="1.0" encoding="utf-8"?>
<resources>

<style name="row"/>

    <style name="row.label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/label_black</item>
    </style>

    <style name="row.input">
        <item name="android:textSize">28px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/input_hint</item>
        <item name="android:textColor">@color/input_color</item>
    </style>

    <style name="button"></style>

    <style name="button.large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/text_white_0</item>
        <item name="android:background">@drawable/shape_blue_stoke_ca</item>
    </style>

    <style name="button.large.blue">
        <item name="android:textColor">@color/text_white_0</item>
        <item name="android:background">@drawable/button_bg_select</item>
    </style>

    <style name="button.large.gray">
        <item name="android:textColor">@color/text_white_0</item>
        <item name="android:background">@drawable/button_bg_select</item>
    </style>

</resources>